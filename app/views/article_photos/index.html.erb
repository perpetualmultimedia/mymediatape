<p id="notice"><%= notice %></p>

<h1>Article Photos</h1>

<table>
  <thead>
    <tr>
      <th>Article</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @article_photos.each do |article_photo| %>
      <tr>
        <td><%= article_photo.article %></td>
        <td><%= link_to 'Show', article_photo %></td>
        <td><%= link_to 'Edit', edit_article_photo_path(article_photo) %></td>
        <td><%= link_to 'Destroy', article_photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article Photo', new_article_photo_path %>
