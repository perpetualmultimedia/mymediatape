<p id="notice"><%= notice %></p>

<h1>Listing Bands</h1>

<table>
  <thead>
    <tr>
      <th>Group name</th>
      <th>Genre</th>
      <th>City</th>
      <th>State</th>
      <th>User</th>
      <th>Description</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bands.each do |band| %>
      <tr>
        <td><%= band.group_name %></td>
        <td><%= band.genre %></td>
        <td><%= band.city %></td>
        <td><%= band.state %></td>
        <td><%= band.user.first_name %> <%= band.user.last_name %></td>
        <td><%= band.description %></td>
        <td><%= band.website %></td>
        <% if user_signed_in? %>
          <% if band.user == current_user %>
            <td><%= link_to 'Show', band %></td>
            <td><%= link_to 'Edit', edit_band_path(band) %></td>
            <td><%= link_to 'Destroy', band, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Band', new_band_path %>
<% end %>