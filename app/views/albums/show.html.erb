
<p id="notice"><%= notice %></p>
<div class="row" style="margin-bottom:20px;">
  <%= link_to band_path(@album.band) do %>
  <div class="col-sm-3 col-md-2 band-avatar-big">
    <%= image_tag @album.band.band_avatar.url(:medium), style: "border-radius:100px; height: 150px;" %>
  </div>
  <div class="col-sm-6 col-md-8 band-name-big" style="padding:30px;">
    <h2>  <%= @album.band.group_name %>   </h2>
  </div>

  <% end %>

</div>

<hr>
<div class="row albumColor" >
  <div class="col-sm-6 col-md-4">
    <img src="<%= @album.album_art.url(:medium) %>" class="albumArt img-responsive" style= "width:100%; object-fit:cover;", class: "img-responsive" >
    <h5><%= pluralize @album.reputation_for(:votes).to_i, "vote" %>
    <% if user_signed_in? %>
        <div class="btn-group vote pull-right" role="group" aria-label="...">
          <%= link_to vote_band_album_path(@album, type: "up"), method: "post", class: "btn btn-default", remote: true, id: "vote-pjax-up" do %><i class="fa fa-chevron-up" aria-hidden="true"></i><% end %>
           <%= link_to vote_band_album_path(@album, type: "down"), method: "post", class: "btn btn-default",  remote: true, id: "vote-pjax-down" do %><i class="fa fa-chevron-down" aria-hidden="true"></i><% end %>
                     <script>

            $("#vote-pjax-up").click(function(){
              window.location.replace('#{band_url}');
            });
           </script>
           <script>
            
            $("#vote-pjax-down").click(function(){
              window.location.replace('#{band_url}');
            });
           </script>
        </div>
      <% end %>

      </h5>
  <p>
    <br/>
    <strong>Released:</strong>
    <%= @album.released %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @album.description %>
  </p>
  <% if user_signed_in? && @user = @album.band.user_id || user_signed_in? && @user.admin?  %><%= link_to "Edit", edit_band_album_url(@album.band.id, @album) %> | <% end %>
<%= link_to 'Back', band_path(@album.band.id) %>

  </div>
  <div class="col-sm-6 col-md-8">
  <h3><%= @album.name %></h3>
  <br/>
  <table class="table table-hover">
    <% @album.songs.each do |album_song| %>
    
      <tr data-href="<%= band_album_song_url(album_song.album.band_id, album_song.album, album_song) %>" id="show-song" class="clickable-row">
        <td style="padding-top:18px;"><%= album_song.track_number %></td>
        <td><strong><%= album_song.title %></strong><br/> <%= album_song.album.name %></td>
        <td style="padding-top:18px;"><%= album_song.album.released %></td>
      </tr>
    
    <% end %>
  </table>
  </p>
  </div>
</div>
<hr>
    <h3> Comments </h3>
    <%= render :partial => 'album_comments_fields' %>
    <% if @album.album_comments.present? %>
      <% @album.album_comments.each do |comment| %>
      <hr>
      <% unless comment.body.blank? %>
        <h5> <strong><%= comment.user.first_name if comment.user %> <%= comment.user.last_name if comment.user %></strong> <small class="pull-right"> <%= time_ago_in_words(comment.created_at) unless comment.created_at.blank? %> ago </small> </h5>
        <p> <%= comment.body %> </p>
      <% end %>
      <% end %>
    <% else %>
      <div class="well">
        <h4> No Comments </h4>
      </div>
    <% end %>

      <script>
jQuery(document).ready(function($) {
    $(".clickable-row").click(function() {
      var url = $(this).data('href');
      window.open(url, '_blank');
    });
});
      </script>