<style>
body{
  margin-top:110px;
}
</style>
<p id="notice"><%= notice %></p>
<div class="row" style="margin-bottom:20px;">
  <%= link_to band_path(@event.band) do %>
  <div class="col-md-2">
    <%= image_tag @event.band.band_avatar.url(:medium), style: "border-radius:100px; height: 150px;" %>
  </div>
  <div class="col-md-8" style="padding:30px;">
    <h2>  <%= @event.band.group_name %>   </h2>
  </div>
  <% end %>
  <div class="col-md-2" style="padding-top:50px;">
    
  </div>
</div>

<hr>
<div class="row albumColor" >
  <div class="col-sm-4 col-xs-3">
    <img src="<%= @event.flyer.url(:medium) %>" class="albumArt"style= "width:100%; object-fit:cover; border-radius:4px;" >
    <hr>
    <h4><strong>Location:</strong></h4>
    <h5><%= @event.address %> <%= @event.city %> <%= @event.state %></h5>
    <br/>
    <iframe
      width="100%"
      height="400"
      frameborder="0" style="border:0"
      src="https://www.google.com/maps/embed/v1/place?key=AIzaSyBAN-m7qyRhHaqmJWXQj6xt2CucgIuf3v8
        &q=<%= @event.address %> <%= @event.city %> <%= @event.state %>" allowfullscreen>
    </iframe>
  </div>
  <div class="col-sm-8 col-xs-9">

    <div class="event-title-date">
      <h2>
      <span class="pull-left"><%= @event.title %></span>
      <span class="pull-right"><%= @event.date %>
      <%= @event.time %></span>
      </h2>
    </div>
    <hr>
  <p>

  </p>
  <p>
    <h3><strong>Description:</strong></h3>
    <h4><%= @event.description %></h4>
  </p>

  <% if @event.ticket_link.present? %>
  <p>
    <strong>Tickets:</strong>
    <a href="<%= @event.ticket_link %>" class="btn btn-success">Buy Tickets Now</a>
  </p>
  <% end %>
</div>
</div>
<% if user_signed_in? && @user = @event.band.user_id %><%= link_to 'Edit', edit_band_event_path(@event.band_id, @event) %> | <% end %>
<%= link_to 'Back', band_path(@event.band_id) %>
