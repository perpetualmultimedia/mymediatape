<% if Event.find(activity.trackable.id).present? %>
  <% if controller_name == "articles" && action_name == "show" ||  controller_name == "static_pages" && action_name == "national"||  controller_name == "bands" && action_name == "index" %>

    <div class="cool-panel">	
    	
        	<h4><%= link_to band_url(activity.trackable.band.id) do %><strong><%= activity.trackable.band.group_name %></strong><% end %> added a <strong>Show</strong> <small class="pull-right"><%= time_ago_in_words activity.trackable.created_at %> ago</small></h4>
          <hr>
          <div style="margin-left:auto; margin-right:auto; text-align: center;">
                <%= link_to band_event_url(activity.trackable.band.id, activity.trackable.id) do %>
        <%= image_tag activity.trackable.flyer.url(:medium), style: "height:200px; width:145px; object-fit:cover;", class: "albumArt" %>
      <% end %>
          </div>
          <hr>
          	<%= link_to band_event_url(activity.trackable.band.id, activity.trackable.id) do %><p><%= activity.trackable.title %></p>
          	<p><%= activity.trackable.description %></p>
          	<p><%= activity.trackable.date %></p>
      	<% end %>
    	<p>
    	</p>
    </div>

  <% else %>
  <div class="activity" >
    <div class="cool-panel" style=" margin-left:-20px; margin-right:-20px; padding:20px;">
      <div class=" row">
        <div class="col-md-8">  
      
          <h4><%= link_to band_url(activity.trackable.band.id) do %><strong><%= activity.trackable.band.group_name %></strong><% end %> added a <strong>Show</strong> <small class="pull-right"><%= time_ago_in_words activity.trackable.created_at %> ago</small></h4>
          <hr>
            
            <div class="row" style="margin-right: 0px; margin-left: 0px;"><%= link_to band_event_url(activity.trackable.band.id, activity.trackable.id) do %><p class="pull-left"><%= activity.trackable.title %></p><small class="pull-right"><%= activity.trackable.date %></small><% end %></div>
            <div class="row" style="margin-right: 0px; margin-left: 0px;"><p><%= activity.trackable.description %></p></div>
            
        
      <p>
      </p>
    </div>
    <div class="col-md-4">
      <%= link_to band_event_url(activity.trackable.band.id, activity.trackable.id) do %>

        <img src="<%= activity.trackable.flyer.url %>" style= " object-fit:cover;" class="albumArt img-responsive"  />
            </div>
          </div>
        </div>
      </div>
      <% end %>
  <% end %>
<% end %>