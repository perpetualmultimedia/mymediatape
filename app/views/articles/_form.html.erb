      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control"%>
  </div>
  <div class="field">
    <%= f.label "Artist" %>

  <%= f.collection_select :band_id, Band.order(:group_name), :id, :group_name, {include_blank: true, class: "form-control"}, { placeholder: "Type Artist Name Here"} %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.cktext_area :body, class: "text_field", :rows => 50, :cols => 120 %>
  </div>

  <div class="actions">
    <%= f.submit 'Save', class: "btn btn-lg btn-success" %>
  </div>
<% end %>
