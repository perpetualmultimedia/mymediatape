<p id="notice"><%= notice %></p>

<h3>
  <%= @article.title %>
</h3>
<% if @article.band_id.present? %>
<h5>
  <%= link_to band_url(@band) do %>
  <%= image_tag @band.band_avatar.url(:thumb), style: "height:60px; width:60px; padding-right:6px; border-radius:30px;" %><%= @band.group_name %>
  <% end %>
</h5>
<% end %>
<p>
  <%= @article.body.html_safe %>
</p>

<h5>
  <%= image_tag @article.user.avatar.url(:thumb), style: "height:30px; padding-right:6px; border-radius:11px;" %> <%= @article.user.first_name %> <%= @article.user.last_name %>
</h5>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
