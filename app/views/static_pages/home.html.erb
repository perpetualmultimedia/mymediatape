<% if user_signed_in? %>
	<div class="row">
		<div class="col-md-1">
			<%= image_tag current_user.avatar.url(:thumb), style: "padding:18px; float:right; border-radius:50px; height:100px;" %>
		</div>
		<div class="col-md-11">
			<h3> Hey <%= current_user.first_name %>,</h3>
			<h4> Here's your feed </h4>
		</div>
	</div>
	<hr>
	<div class="col-md-3">
	<h3><strong>Your Bands</strong></h3>
	<hr>
		<% current_user.bands.each do |band| %>
			<label> <%= link_to band do %><%= band.group_name %> <% end %></label> <br/> 
			<%= link_to 'Edit', edit_band_path(band) %> | <%= link_to 'Add Music', new_band_album_path(band) %>
			<hr>
		<% end %>
		<%= link_to 'New Band', new_band_path %>
	</div>
	<div class="col-md-6">
	<h3><strong>Recent Activities</strong></h3>
	<hr>
	<%= render_activities(@activities) %>

	</div>
	<div class="col-md-3">
		<h3><strong> Bands you follow </strong></h3>
		<hr>
		<% current_user.following.each do |band| %>
			<p>
			
			<%= link_to band do %><%= band.group_name %><% end %>
			</p>
			<hr>
		<% end %>
		<h3><strong> Top Bands </strong></h3>
		<hr>
		<% @bands.each do |top_band| %>
			<p>
			<%= link_to top_band do %><%= top_band.group_name %><% end %>
			</p>
			<hr>
		<% end %>
	</div>
<% else %>
	<h3> Hey,</h3>
	<h4> Welcome to My Media Tape! Listen to some music! </h4>
	<hr>
	<div class="row">
		<div class="col-md-6">
			<h3> Recent Activity </h3>
			<hr>
			<%= render_activities(@activities) %>
		</div>
	</div>
<% end %>