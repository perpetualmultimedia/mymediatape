	<div class="col-md-9">
	<h3><strong>Recent Activities</strong></h3>
	<hr>
	<% if @activities.present? %>
		<div class="activities">
			<%= render_activities(@activities) %>
		</div>
	<% else %>
		<div class="well">
			<h4>No Activities</h4>
			<h4><%= link_to "Find Some Artists To Like", bands_path %>
		</div>
	<% end %>
	

	</div>
	<div class="col-md-3">
		<% if current_user.following.any? %>
			<h3><strong> Bands you follow </strong></h3>
			<hr>
			<% current_user.following.each do |band| %>
				<p>
				
				<%= link_to band do %><%= band.group_name %><% end %>
				</p>
				<hr>
			<% end %>
		<% end %>
		<h3><strong> Top Local Artists </strong></h3>
		<hr>
		<% @bands.each do |top_band| %>
			<p>
			<%= link_to top_band do %><%= top_band.group_name %> <small class="pull-right"><%= top_band.reputation_for(:votes).to_i %></small><% end %>
			</p>
			<hr>
		<% end %>
	</div>

<% else %>
	<h3> Hey,</h3>
	<h4> Welcome to My Media Tape! Listen to some music! </h4>
	<hr>
	<div class="row">
		<div class="col-md-6">
			<h3> Recent Activity </h3>
			<hr>
			<%= render_activities(@activities) %>
		</div>
	</div>
<% end %>
