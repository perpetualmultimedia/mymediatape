<div class="blurry-stock ">
	<img src="https://s3-us-west-2.amazonaws.com/mymediatape/static_assets/home-office-336378_1920.jpg" class="blurry-image" style="object-fit: cover; filter: blur(10px); height:100%;  background-color: #888;"/>
</div>
<div class="col-md-6 col-md-offset-3" style="padding:0px;">
	<img src="https://s3-us-west-2.amazonaws.com/mymediatape/static_assets/home-office-336378_1920.jpg" class="cool-panel" style="position: absolute; z-index: 10; top: 90px; width:100%; max-height: 400px; object-fit: cover;"/>
</div>
<div class="container" style="margin-top:450px;">
	<div class="row" style="margin-top: 50px;">
		<div class="col-md-6 col-md-offset-3 cool-panel" style="padding: 0px 15px 35px 15px;">
			<h3 class="h3-centered">Become a writer?</h3>
			<%= link_to "Write an article about an artist, album, or show", new_article_path, class: "btn btn-block btn-success" %>
		</div>
	</div>
	<div class="row" style="padding-left:15px; padding-right: 15px; margin-top: 40px;">
		<% @articles.each_with_index do |article, i| %>
			<%= link_to article_path(article) do %>
				<div class="col-lg-3 col-md-6 col-sm-6 cool-panel top-2" style="padding-left:0px; padding-right:0px;">
					<div class="row top-of-fold-content">
		              	<div class="blur-art-sm">
		              		<% if article.article_photos.any? %>
		                  		<% article.article_photos.each_with_index do |photo, i| %>
				                    <% if i == 0 %>
		            				<%= image_tag photo.image.url(:medium), style: "object-fit:cover;", class: "blurry-image-sm"  %>
		            				<% end %>
		                  		<% end %>
		                	<% end %>
		              	</div>
		                <div class="art-top">
		                  	<div class="clear-art-sm" >
			                  	<% if article.article_photos.any? %>
			                  		<% article.article_photos.each_with_index do |photo, i| %>
					                    <% if i == 0 %>
					                      <%= image_tag photo.image.url(:medium), style: "object-fit:cover;", class: "clear-image band-img" %>
					                    <% end %>
				                  	<% end %>
				                <% end %>
		                  	</div>
		                </div>
		                <div class="details-bottom">
		                  	<div class="album-details-sm">
		                    	<h4 class="h3-centered"> <%= article.title %> </h4>

		                    	<div class="add-deets">
		                    	<h5> by <%= article.user.first_name %> <%= article.user.last_name %></h5>
		                      	 <%= article.created_at.strftime("%b %d, %Y") %>
		                    	</div>
		                  	</div>
		                </div>
	                </div>
	            </div>
	        <% end %>
		<% end %>
	</div>
